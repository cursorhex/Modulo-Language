{
  "comments": {
    "lineComment": "//"
  },
  "brackets": [
    ["{", "}"],
    ["[", "]"],
    ["(", ")"]
  ],
  "autoClosingPairs": [
    {"open": "{", "close": "}"},
    {"open": "[", "close": "]"},
    {"open": "(", "close": ")"},
    {"open": "\"", "close": "\""}
  ],
  "surroundingPairs": [
    ["{", "}"],
    ["[", "]"],
    ["(", ")"],
    ["\"", "\""]
  ],
  "folding": {
    "markers": {
      "start": "^\\s*//\\s*#region",
      "end": "^\\s*//\\s*#endregion"
    }
  },
  "indentationRules": {
    "increaseIndentPattern": "^.*\\{[^}\"']*$|^.*\\([^)\"']*$|^\\s*section\\s+\\w+\\s*\\{\\{$",
    "decreaseIndentPattern": "^\\s*\\}|^\\s*\\)|^\\s*\\}\\}"
  },
  "onEnterRules": [
    {
      "beforeText": "^\\s*//.*",
      "action": {"indent": "none"}
    },
    {
      "beforeText": "^\\s*\\{\\{",
      "afterText": "^\\s*\\}\\}",
      "action": {"indent": "indentOutdent"}
    }
  ]
}