{
  "name": "modulo-grammar",
  "displayName": "Modulo Language",
  "description": "Full support for the Modulo programming language",
  "version": "0.1.0",
  "publisher": "your-name",
  "engines": {
    "vscode": "^1.106.1"
  },
  "categories": ["Programming Languages"],
  "activationEvents": ["onLanguage:modulo"],
  "main": "./extension.js",
  "contributes": {
    "languages": [{
      "id": "modulo",
      "aliases": ["Modulo", "modulo"],
      "extensions": [".mdu", ".mdl", ".mod"],
      "configuration": "./language-configuration.json"
    }],
    "grammars": [{
      "language": "modulo",
      "scopeName": "source.modulo",
      "path": "./syntaxes/modulo.tmLanguage.json"
    }],
    "themes": [{
      "label": "Modulo Theme",
      "uiTheme": "vs-dark",
      "path": "./themes/my-theme.json"
    }],
    "snippets": [{
      "language": "modulo",
      "path": "./snippets/modulo.json"
    }]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "echo 'No compilation needed'",
    "package": "vsce package"
  },
  "devDependencies": {
    "@types/vscode": "^1.106.1"
  }
}